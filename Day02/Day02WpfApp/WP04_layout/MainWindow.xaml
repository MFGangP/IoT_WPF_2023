<Window x:Class="WP04_layout.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WP04_layout"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="500">
<!-- 얘들도 결국 객체다 Window Grid Canvas -->
    <StackPanel Width="300" Height="300">
        <Canvas Width="50" Height="50" Background="LightBlue">
            <Button Width="100" Content="안녕하세요 버튼입니다."></Button>
        </Canvas>
        
        <Grid Width="50" Height="50" Background="LightBlue" Margin="5">
            <Button Width="100" Content="안녕하세요 버튼입니다."></Button>
        </Grid>
    </StackPanel>
</Window>
